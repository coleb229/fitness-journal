generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model DailyLog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  date      DateTime @default(now())
  calories  Int
  fat       Int
  protein   Int
  carbs     Int
  abs       Boolean
  cardio    Boolean
  training  String
  tFat      Int
  tProtein  Int
  tCarbs    Int
  tCalories Int
  weight    Float
  notes     String
}